<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="630.0" prefWidth="728.0" fx:controller="com.mock.employee.app.controllers.main.MainController">
    <children>
        <HBox layoutX="91.0" prefHeight="66.0" prefWidth="638.0" style="-fx-background-color: #007BDB;">
            <children>
                <Button style="-fx-background-color: transparent;" fx:id="logoButton">
                    <graphic>
                        <ImageView fitHeight="70.0" fitWidth="355.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@loge_new.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            </children>
        </HBox>
        <VBox prefHeight="630.0" prefWidth="93.0" style="-fx-background-color: darkblue;">
            <children>
                <Button style="-fx-background-color: transparent;" fx:id="burgerButton">
                    <graphic>
                        <ImageView fitHeight="53.0" fitWidth="91.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@burger.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>

                <Button style="-fx-background-color: transparent;" fx:id="userButton" >
                    <graphic>
                        <ImageView fitHeight="53.0" fitWidth="58.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@user.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>

                <Button style="-fx-background-color: transparent;" fx:id="listButton" onAction="#handleListButtonAction">
                    <graphic>
                        <ImageView fitHeight="105.0" fitWidth="67.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@list.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>

                <Button style="-fx-background-color: transparent;" fx:id="infoButton" >
                    <graphic>
                        <ImageView fitHeight="93.0" fitWidth="58.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@info.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>

                <Button style="-fx-background-color: transparent;" fx:id="settingButton">
                    <graphic>
                        <ImageView fitHeight="116.0" fitWidth="66.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@setting.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            </children>
        </VBox>
        <TableView layoutX="200" layoutY="100" prefHeight="400" prefWidth="400">
            <columns>
                <TableColumn text="Employee ID">
                    <cellValueFactory>
                        <PropertyValueFactory property="employeeId"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="Name">
                    <cellValueFactory>
                        <PropertyValueFactory property="name"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="Action">
                    <cellValueFactory>
                        <PropertyValueFactory property="action"/>
                    </cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>
    </children>
</AnchorPane>